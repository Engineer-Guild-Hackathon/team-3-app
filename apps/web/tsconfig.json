{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@team3/api-client": ["../../packages/api-client/src/index.ts"],
      "@team3/api-client/*": ["../../packages/api-client/src/*"],
      "@team3/auth-shared": ["../../packages/auth-shared/src/index.ts"],
      "@team3/auth-shared/*": ["../../packages/auth-shared/src/*"],
      "@team3/db": ["../../packages/db/src/schema/index.ts"],
      "@team3/db/*": ["../../packages/db/src/schema/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
